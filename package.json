{
    "name": "dictionary-pwa",
    "version": "0.5.0",
    "description": "App Project scaffold of WebCell v2",
    "keywords": [
        "web-component",
        "typescript",
        "jsx",
        "web-cell"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Leidenschaft/Dictionary-PWA.git"
    },
    "bugs": {
        "url": "https://github.com/Leidenschaft/Dictionary-PWA/issues"
    },
    "dependencies": {
        "boot-cell": "^2.0.0-rc.0",
        "browser-unhandled-rejection": "^1.0.2",
        "cell-router": "^3.0.1",
        "dom-renderer": "^2.6.1",
        "fast-xml-parser": "^4.5.0",
        "koajax": "^3.1.1",
        "lodash.debounce": "^4.0.8",
        "mobx": "^6.13.5",
        "mobx-i18n": "^0.6.0",
        "mobx-restful": "^2.1.0-rc.1",
        "web-cell": "^3.0.3",
        "web-utility": "^4.4.2",
        "yaml": "^2.6.1"
    },
    "devDependencies": {
        "@eslint/compat": "^1.2.4",
        "@eslint/js": "^9.16.0",
        "@parcel/config-default": "~2.13.2",
        "@parcel/packager-raw-url": "~2.13.2",
        "@parcel/transformer-typescript-tsc": "~2.13.2",
        "@parcel/transformer-webmanifest": "~2.13.2",
        "@types/eslint-config-prettier": "^6.11.3",
        "@types/lodash.debounce": "^4.0.9",
        "@types/node": "^20.17.10",
        "autoprefixer": "^10.4.20",
        "buffer": "^6.0.3",
        "eslint": "^9.16.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-react": "^7.37.2",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "globals": "^15.13.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.2.11",
        "parcel": "~2.13.2",
        "postcss-modules": "^6.0.1",
        "prettier": "^3.4.2",
        "process": "^0.11.10",
        "typescript": "~5.7.2",
        "typescript-eslint": "^8.18.0",
        "workbox-cli": "^7.3.0"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{html,md,css,less,json,yml}": "prettier --write",
        "*.{js,ts,tsx}": "eslint --fix"
    },
    "postcss": {
        "modules": true,
        "plugins": {
            "autoprefixer": {
                "grid": true
            }
        }
    },
    "scripts": {
        "prepare": "husky",
        "test": "lint-staged",
        "clean": "rm -rf .parcel-cache/ dist/",
        "start": "npm run clean  &&  parcel src/index.html",
        "pack-dist": "parcel build src/index.html --public-url .",
        "pack-sw": "rm -f dist/sw.js.map  &&  workbox generateSW",
        "build": "npm run clean  &&  npm run pack-dist  &&  npm run pack-sw"
    }
}
